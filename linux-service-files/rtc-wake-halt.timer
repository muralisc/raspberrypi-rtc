[Unit]
Description=RTC Wake Halt Timer
Documentation=man:systemd.timer(5)

[Timer]
# Run every 30 minutes
OnCalendar=*:0/30

# Run immediately if the system was off when the timer should have triggered
Persistent=true

# Randomize start time by up to 1 minute to avoid resource conflicts
RandomizedDelaySec=1min

[Install]
WantedBy=timers.target
